<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.mywidget.ui.main.MainFragmentViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.MainActivity"
        android:background="#8ED8E2">

        <include
            android:id="@+id/title_container"
            layout="@layout/layout_title"/>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/main_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabTextColor="#989696"
            app:tabSelectedTextColor="#ffffff"
            app:tabIndicatorColor="#ffffff"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_container"/>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp_tab"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/main_tab"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="10dp"
            android:background="#F7F7F7">

        </androidx.viewpager.widget.ViewPager>

        <TextView
            android:id="@+id/floating_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="60dp"
            android:text="+"
            android:gravity="center"
            android:background="@drawable/circle_blue"
            android:textSize="35dp"
            android:textColor="@color/white"
            android:paddingBottom="4dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/loveday_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/loveday_bg"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitCenter"
            android:visibility="visible"
            android:alpha="0.2"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
