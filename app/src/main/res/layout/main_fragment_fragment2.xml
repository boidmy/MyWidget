<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.mywidget.viewModel.MainFragmentViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/left_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:onClick="@{() -> viewModel.leftClick()}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/right_container"
                app:layout_constraintHorizontal_weight="0.5">

            <TextView
                android:id="@+id/left_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="뿡이"/>

            <TextView
                android:id="@+id/lmemo_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="기분이 좋아욤"
                android:text="@{viewModel.leftString.memo}"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/date_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="#9C9C9C"
                android:text="@{viewModel.leftString.date}"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/right_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:onClick="@{() -> viewModel.rightClick()}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/left_container"
                app:layout_constraintHorizontal_weight="0.5">

        <TextView
                android:id="@+id/right_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="콩이"/>

        <TextView
                android:id="@+id/lmemo_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="기분이 좋아욤"
                android:text="@{viewModel.rightString.memo}"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"/>

        <TextView
                android:id="@+id/date_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="#9C9C9C"
                android:text="@{viewModel.rightString.date}"/>
        </LinearLayout>

        <TextView
                android:id="@+id/heart_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_heart"
                tools:text="300일"
                android:text="@{viewModel.loveday}"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="28dp"
                android:layout_marginBottom="80dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

        <View
            android:id="@+id/dim_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#77000000"
            android:orientation="horizontal"
            android:visibility="invisible"
            tools:layout_editor_absoluteX="-112dp"
            tools:layout_editor_absoluteY="-35dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
